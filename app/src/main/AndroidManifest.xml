<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cours.buddepas">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.recipe.RecipeDetailsActivity"></activity>
        <activity android:name=".ui.recipe.AddNewRecipeActivity"></activity>
        <activity android:name=".ui.ParametersActivity"></activity>
        <activity android:name=".ui.ingredients.AddNewIngredientActivity"></activity>
        <activity android:name=".ui.shopping.AddIngredientShoppingActivity"></activity>
        <activity android:name=".ui.recipe.FilterRecipes"></activity>
        <activity android:name=".ui.calendar.AddProgrammedRecipeActivity"></activity>
        <activity android:name=".ui.recipe.RecipeProposedActivity"></activity>
    </application>

</manifest>