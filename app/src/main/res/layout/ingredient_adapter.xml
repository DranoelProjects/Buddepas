<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/text_view_ingredient_kind"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_list_view_text" />

    <TextView
        android:id="@+id/text_view_ingredient_name"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_width="fill_parent"
        android:layout_toRightOf="@id/text_view_ingredient_kind"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_list_view_text" />

    <TextView
        android:id="@+id/text_view_ingredient_xquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/text_view_ingredient_quantity"
        android:text="x"
        android:textSize="@dimen/size_list_view_text"/>

    <TextView
        android:id="@+id/text_view_ingredient_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/size_list_view_text">

    </TextView>

    <ImageButton
        android:id="@+id/button_remove_stock_ingredient"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_remove_circle_outline_24px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false">

    </ImageButton>


</RelativeLayout>